#include <math.h>
#include <stdio.h>
#include <stdlib.h>

#include "point.hpp"
class Circle {
 private:
  Point p;
  const double r;

 public:
  Circle(Point np, const double nr) : p(np), r(nr) {}
  void move(double dx, double dy) { p.move(dx, dy); }
  double intersectionArea(const Circle & otherCircle) {
    double d = sqrt(pow(p.x - otherCircle.p.x, 2) + pow(p.x - otherCircle.p.x, 2));
    double nx = (pow(otherCircle.r, 2) - pow(r, 2) + pow(d, 2)) / (2 * d);
    double ny = sqrt(pow(otherCircle.r, 2) - pow(nx, 2));
    double a1 = pow(otherCircle.r, 2) / (sin(ny / otherCircle.r)) +
                pow(r, 2) / (sin(ny / r)) -
                ny * (sqrt(pow(otherCircle.r, 2) - ny * ny) + sqrt(pow(r, 2) - ny * ny));
    return a1;
  }
  ~Circle() {}
};
